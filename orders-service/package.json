{
    "name": "orders-service",
    "version": "1.0.0",
    "description": "Orders microservice with SAGA pattern",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "prebuild": "pnpm run type-check",
        "build": "tsc && tsc-alias",
        "start": "node dist/index.js",
        "dev": "tsx watch src/index.ts",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "type-check": "tsc --noEmit",
        "check": "pnpm run type-check && pnpm run lint",
        "prisma:generate": "prisma generate --schema=src/infrastructure/prisma/schema.prisma",
        "prisma:migrate": "prisma migrate dev --schema=src/infrastructure/prisma/schema.prisma",
        "prisma:studio": "prisma studio --schema=src/infrastructure/prisma/schema.prisma",
        "prisma:push": "prisma db push --schema=src/infrastructure/prisma/schema.prisma",
        "db:setup": "pnpm run prisma:generate && pnpm run prisma:push",
        "test:saga": "./tests/saga/run-all-tests.sh",
        "test:saga:product-success": "tsx tests/saga/01-product-creation-success.ts",
        "test:saga:order-success": "tsx tests/saga/02-order-success-full-flow.ts",
        "test:saga:order-product-fail": "tsx tests/saga/03-order-product-not-found.ts",
        "test:saga:order-inventory-fail": "tsx tests/saga/04-order-inventory-fail-compensation.ts"
    },
    "keywords": [
        "microservices",
        "saga",
        "nodejs",
        "typescript"
    ],
    "author": "",
    "license": "ISC",
    "engines": {
        "node": ">=22.11.0",
        "pnpm": ">=10.0.0"
    },
    "packageManager": "pnpm@10.10.0",
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/amqplib": "^0.10.8",
        "@types/express": "^5.0.5",
        "@types/node": "^24.10.1",
        "@typescript-eslint/eslint-plugin": "^8.48.0",
        "@typescript-eslint/parser": "^8.48.0",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "nodemon": "^3.1.11",
        "prettier": "^3.7.2",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.0"
    },
    "dependencies": {
        "@prisma/adapter-better-sqlite3": "^7.0.1",
        "@prisma/client": "^7.0.1",
        "@types/better-sqlite3": "^7.6.13",
        "amqplib": "^0.10.9",
        "better-sqlite3": "^12.5.0",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "node-fetch": "^3.3.2",
        "prisma": "^7.0.1",
        "zod": "^4.1.13"
    }
}